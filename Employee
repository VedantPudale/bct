// Write a program in solidity to create Employee data. Use the following constructs:
// • Structures
// • Arrays
// • Fallback
// Deploy this as smart contract on Ethereum and Observe the transaction fee and Gas values.

Code-
//SPDX-License-Identifier: UNLICENSED
pragma solidity >=0.7.0 <0.9.0;

// Build the Contract
contract EmployeeManagmtSys {
    // Create a structure for
    // employee details
    struct EmployeeStruct {
        uint256 ID;
        string fName;
        string lName;
        uint256 salary;
    }
    address owner;
    uint256 public stdCount = 0;
    //Create Array to store Employee data
    EmployeeStruct[] stdRecords;

    constructor() {
        owner = msg.sender;
    }

    // Create a function to add
    // the new records
    function addNewRecords(
        uint256 _ID,
        string memory _fName,
        string memory _lName,
        uint256 _salary
    ) public payable {
        //fallback function
        // Increase the count by 1
        stdCount = stdCount + 1;
        //Adding data into array
        stdRecords.push(EmployeeStruct(_ID, _fName, _lName, _salary));
    }

    function getAllRecords() public view returns (EmployeeStruct[] memory) {
        return stdRecords;
    }
}
